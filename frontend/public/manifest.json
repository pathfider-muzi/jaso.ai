{
  "name": "Three lines of people",
  "description": "A chrome Extension that summarizes the content of a page in three lines",
  "manifest_version": 2,
  "version": "1.0.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html",
    "show_matches": [
      "https://namu.wiki/*"
    ]
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://namu.wiki/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "webNavigation",
    "tabs"
  ]
}